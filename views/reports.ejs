<%- include('header2') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
           
            display: flex;
            flex-direction: column;
            align-items: center;
            background: url("img8.png") no-repeat center center fixed; /* Replace 'image.png' with the actual URL of your image */
            background-size: cover;
            margin: 0;
            filter: none;
        }
       
        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
            margin-top: 100px;
        }
        .container h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 30px;
        }
        .container form {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .container form label {
            margin: 10px 0 5px;
            font-size: 16px;
            color: #555;
        }
        .container form input {
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-bottom: 20px;
            width: 100%;
        }
        .container form button {
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }
        .container form button:hover {
            background-color: #0056b3;
        }
        .back-link {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            background-color: #008002;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    
    <div class="container">
        <h1>Generate Reports</h1>
        <form action="/generateReports" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required>
            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required>
            <button type="submit">Generate Report</button>
        </form>
        <a href="/admin_dashboard" class="back-link">Back</a>
    </div>
</body>
</html>
